{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["tsconfig.json"],
	"tasks": {
		"build": {
			"description": "Build task with env passthrough",
			"dependsOn": ["^build"],
			"outputs": [
				".next/**",
				"!.next/cache/**",
				"dist/**"
			],
			"env": [
				"GOOGLE_CLIENT_ID",
				"GOOGLE_CLIENT_SECRET",
				"NEXTAUTH_URL",
				"NEXTAUTH_SECRET",
				"DATABASE_URL"
			]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"test": {
			"dependsOn": ["^build"],
			"outputs": ["coverage/**"]
		},
		"clean": {
			"cache": false
		}
	}
}
