// Try Prisma Accelerate: https://pris.ly/cli/accelerate-init

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // 사용하시는 데이터베이스에 맞게 변경해주세요 (예: "mysql", "sqlite", "sqlserver", "mongodb")

  // 런타임(서버리스/Accelerate)에는 prisma:// URL을 사용합니다.
  url = env("DATABASE_URL")

  // 마이그레이션(DDL)에는 postgresql:// URL을 사용합니다.
  // Prisma 4.10.0부터 directUrl 속성을 사용하여 마이그레이션과 런타임에서 다른 URL을 사용할 수 있습니다.
  // https://www.prisma.io/docs/orm/prisma-schema/overview/data-sources#using-direct-connections
  directUrl = env("DIRECT_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
}

// 예시 모델입니다. 필요에 따라 수정하거나 삭제해주세요.
model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[] // 사용자가 작성한 게시물 목록
}